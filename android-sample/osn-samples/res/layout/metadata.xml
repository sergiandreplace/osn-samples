                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dip"
                    android:hint="@string/undefined"
                    android:textAppearance="?android:attr/textAppearanceSmall" />
